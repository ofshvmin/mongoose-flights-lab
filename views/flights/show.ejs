<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include("../partials/nav") %>


<!-- <title>Flight</title> -->

<main>
  <h1> <%= title %> </h1>
  <table>
    <thead>
      <th>Airline</th>
      <th>Flight Number</th>
      <th>Airport</th>
      <th>Departure Date and Time</th>
    </thead>
    <tbody>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.departs %></td>
        </tr>
        
      </tbody>
    </table>
    <span style="display: inline">
      <a href="/flights/<%= flight._id %>/edit"><button>Edit</button></a>
      <a href="/flights/"><button>Go Back</button></a>
    </span>
    
    <h2>Tickets</h2>
    <form 
    id=""
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
    >
    <label for="seat-text">Seat:</label>
    <input type="text" name="seat" id="seat-text">
    <label for="price-text">Price:</label>
    <input type="text" name="price" id="price-text">
    <button type="submit">Add Ticket</button>
    
  </form>
  
  <table>
    <thead>
      <th>Seat</th>
      <th>Price</th>
    </thead>
    <tbody>
        <% flight.tickets.forEach(ticket => { %>
        <tr>
          <td><%= ticket.seat %></td>
          <td><%= ticket.price %></td>    
        </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  <%- include("../partials/footer") %>